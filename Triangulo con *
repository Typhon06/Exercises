//Ejercicio 2: Crea un programa que imprima por pantalla un tri√°ngulo hecho de asteriscos (*).

import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner triangulo = new Scanner(System.in);
        System.out.print("ALTURA DEL TRIANGULO: ");
        int altura = triangulo.nextInt();
        int i;
        int j;
        for (i = 0; i < altura; i++) {
            for (j = 0; j <= i; j++) {
                System.out.print("*");
            }
            System.out.println();
        }

    }
}

